<Window x:Class="Idler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Idler"
        xmlns:ViewModels="clr-namespace:Idler.ViewModel;assembly=Idler.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Window.DataContext>
        <ViewModels:TasksVM/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <local:TasksGridView Height="Auto" Width="Auto" />
        <DockPanel Name="DockPanel" Grid.Row="2">
        <Button HorizontalAlignment="Right"
                    Content="Add"
                    Command ="{Binding AddTask}" Height="25" Width="65" Margin="3"/>

            <Button HorizontalAlignment="Right" 
                    Content="Clear"
                    Command ="{Binding RemoveTask}" Height="25" Width="65" Margin="3"/>
        </DockPanel>
    </Grid>
</Window>
